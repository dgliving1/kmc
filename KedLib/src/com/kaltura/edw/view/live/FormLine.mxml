<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%">
	<mx:Script>
		<![CDATA[
			[Bindable]
			public var prefixesWidth:int;
			
			[Bindable]
			public var value:String;
		]]>
	</mx:Script>
	<mx:Label text="{label}" width="{prefixesWidth}" styleName="drillDownLabel"/>
	<mx:Label text="{value}" width="100%" selectable="true" truncateToFit="false"/>
</mx:HBox>
