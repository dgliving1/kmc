<?xml version="1.0" encoding="utf-8"?>
<renderers:FlavorAssetRendererBase xmlns="com.kaltura.kmc.modules.content.view.window.entrydetailswindowsections.renderers.*" 
	xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" creationComplete="{onCreatoinComplete()}" xmlns:renderers="com.kaltura.kmc.modules.content.view.window.entrydetails.renderers.*">
	
	
	<mx:Script>
		<![CDATA[
			
			override public function set data(value:Object):void
			{
				super.data = value;
				onCreatoinComplete();
				setFlavorNameLabel();
			}
			
			private function setFlavorNameLabel():void
			{
				flavorNameLabel.enabled = (data.kalturaFlavorAssetWithParams.flavorAsset != null);
				flavorNameLabel.text = data.kalturaFlavorAssetWithParams.flavorParams.name;
				flavorNameLabel.toolTip = flavorNameLabel.text;
			}
			
			
		]]>
	</mx:Script>
	
	<mx:Label id='flavorNameLabel' creationComplete="setFlavorNameLabel()"/>
</renderers:FlavorAssetRendererBase>
