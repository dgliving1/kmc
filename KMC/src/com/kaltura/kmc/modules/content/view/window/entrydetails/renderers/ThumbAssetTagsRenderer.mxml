<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="90" verticalAlign="middle" horizontalAlign="center">
	<mx:Script>
		<![CDATA[
			import com.kaltura.kmc.modules.content.model.ThumbnailWithDimensions;
			
			override public function set data(value:Object):void {
				var thumb:ThumbnailWithDimensions = value as ThumbnailWithDimensions;
				if (thumb.thumbAsset){
					tagsLabel.text = thumb.thumbAsset.tags;
					tagsLabel.toolTip = thumb.thumbAsset.tags;
				} else {
					tagsLabel.text = "-";
				}
			}
		]]>
	</mx:Script>
	<mx:Label id="tagsLabel" width="100%" textAlign="center"/>
</mx:HBox>
