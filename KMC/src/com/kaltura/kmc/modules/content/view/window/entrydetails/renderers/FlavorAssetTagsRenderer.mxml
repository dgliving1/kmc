<?xml version="1.0" encoding="utf-8"?>
<renderers:FlavorAssetRendererBase xmlns="com.kaltura.kmc.modules.content.view.window.entrydetailswindowsections.renderers.*" 
								   xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" creationComplete="{onCreatoinComplete()}" xmlns:renderers="com.kaltura.kmc.modules.content.view.window.entrydetails.renderers.*">
	<mx:Script>
		<![CDATA[
			import com.kaltura.kmc.modules.content.vo.FlavorAssetWithParamsVO;
			import com.kaltura.vo.KalturaFlavorAsset;
			
			override public function set data(value:Object):void {
				super.data = value;
				var kfa:KalturaFlavorAsset = (value as FlavorAssetWithParamsVO).kalturaFlavorAssetWithParams.flavorAsset;
				if (kfa != null){
					tagsLabel.text = kfa.tags;
				} else {
					tagsLabel.text = "-";
				}
			}
		]]>
	</mx:Script>
	<mx:TextArea backgroundAlpha="0" borderStyle="none" id="tagsLabel" width="100%" textAlign="center" editable="false"/>
</renderers:FlavorAssetRendererBase>
