									<width></width>
									<height></height>
								</size>
							</video>
							<audio>
								<device></device>
								<crossbar_input></crossbar_input>
								<sample_rate></sample_rate>
								<channels></channels>
								<input_volume></input_volume>
							</audio>
						</capture>
						<encode>
							<video>
								<format></format>
								<datarate></datarate>
								<outputsize></outputsize>
								<advanced>
									<profile></profile>
									<level></level>
									<keyframe_frequency></keyframe_frequency>
								</advanced>
