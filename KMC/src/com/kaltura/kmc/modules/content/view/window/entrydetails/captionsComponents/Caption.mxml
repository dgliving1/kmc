		<mx:TextInput id="urlTi" width="400" text="{caption.downloadUrl}" enabled="{!_isLoading &amp;&amp; !caption.isNewUploaded}" editable="{editable}"/>
		<mx:Image width="24" height="24" toolTip="{resourceManager.getString('drilldown','convertingToolTip')}"
				  source="{SpinnerImg}" visible="{_isLoading}" includeInLayout="{_isLoading}"/>
