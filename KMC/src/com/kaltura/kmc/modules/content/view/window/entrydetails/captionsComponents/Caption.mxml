	</mx:HBox>
	<mx:HBox visible="{editable}" includeInLayout="{editable}">
		<mx:Spacer width="100"/>
		<mx:LinkButton label="{resourceManager.getString('drilldown','uploadCaption')}" click="browse()"
					   visible="{!_isLoading &amp;&amp; !caption.isNewUploaded}" includeInLayout="{!_isLoading &amp;&amp; !caption.isNewUploaded}"
					   styleName="plusIcon"/>
		<mx:Label visible="{caption.isNewUploaded}" text="{resourceManager.getString('drilldown','captionUploadedTip')}"/>
		
	</mx:HBox>
	<mx:HBox>
		<mx:Label text="{resourceManager.getString('drilldown','captionType')}" width="100" styleName="drillDownLabel"/>
		<!--<mx:Label text="{_formatText}"/>-->
		<mx:ComboBox id="typeCB" width="170" enabled="{(!_captionExists &amp;&amp; editable)}" selectedIndex="{_selectedTypeIndex}"
					 dataProvider="{new Array(resourceManager.getString('drilldown','srtLabel'), resourceManager.getString('drilldown','dfxpLabel'))}"/>
	</mx:HBox>
	<mx:HBox>
		<mx:Label text="{resourceManager.getString('drilldown','captionLanguage')}" width="100" styleName="drillDownLabel"/>
		<mx:ComboBox id="languageCB" width="170" dataProvider="{EntryCaptions.LANGUAGES_ARRAY}" selectedIndex="{_languageIndex}" 
					 prompt="{resourceManager.getString('drilldown','languagePrompt')}" enabled="{editable}"/>
		<mx:Spacer width="6"/>
		<mx:Label text="{resourceManager.getString('drilldown','captionLanguageLabel')}" styleName="drillDownLabel"/>
		<mx:TextInput id="labelTi" text="{_languageLabel}" editable="{editable}" width="162"/>
	</mx:HBox>
	<mx:HBox visible="{_showActionsBox &amp;&amp; editable}" includeInLayout="{_showActionsBox &amp;&amp; editable}">
		<mx:Spacer width="100"/>
		<mx:HBox width="400">
			<mx:LinkButton id="download" label="{resourceManager.getString('drilldown','downloadFile')}" click="downloadCaption()"
						   visible="{caption.downloadUrl!=null}" includeInLayout="{caption.downloadUrl!=null}" styleName="downloadThumbLinkButton"/>
			<mx:LinkButton id="remove" label="{resourceManager.getString('drilldown','remove')}" click="removeCaption()"
						   styleName="deleteThumbLinkButton"/>
			<mx:Spacer width="100%"/>
			<mx:Label text="{resourceManager.getString('drilldown','default')}" visible="{_isDefault}"
					  includeInLayout="{_isDefault}"/>
			<mx:LinkButton label="{resourceManager.getString('drilldown','setAsDefault')}" 
						   visible="{(_captionExists &amp;&amp; !_isDefault)}" includeInLayout="{(_captionExists &amp;&amp; !_isDefault)}"
						   styleName="setDefaultLinkButton" click="setAsDefault()"/>
		</mx:HBox>
		
	</mx:HBox>
