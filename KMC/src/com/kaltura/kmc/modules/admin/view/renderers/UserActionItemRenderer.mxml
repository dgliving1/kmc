<?xml version="1.0" encoding="utf-8"?>
<renderers:UserBaseItemRenderer xmlns:mx="http://www.adobe.com/2006/mxml" 
								xmlns:renderers="com.kaltura.kmc.modules.admin.view.renderers.*" width="100%" height="100%">
	<mx:Script>
		<![CDATA[
			import com.kaltura.vo.KalturaUser;
			
			private var _currUser:KalturaUser;
			
			override public function set data(value:Object):void {
				_currUser = value as KalturaUser;
				super.data = value;
			}
			
			/**
			 * show formatted date
			 * */
			private function formatDate():String {
				var df:DateFormatter = new DateFormatter();
				df.formatString = resourceManager.getString('admin', 'list_date_format');
				var dt:Date = new Date();
				dt.setTime(_currUser.lastLoginTime * 1000);
				return df.format(dt);
			};
		]]>
	</mx:Script>
	<mx:VBox verticalAlign="middle" horizontalAlign="center"   
			 horizontalScrollPolicy="off" verticalScrollPolicy="off" width="100%" height="100%">
		<mx:ComboBox width="130" selectedIndex="-1"
					 dataProvider="{outerDocument.getActionsDP(data)}"
					 prompt="{resourceManager.getString('admin','select_action')}"
					 change="{outerDocument.onActionSelected(event)}" 
					 enabled="{outerDocument.enableActionDropdown}"/>
	</mx:VBox>
</renderers:UserBaseItemRenderer>
